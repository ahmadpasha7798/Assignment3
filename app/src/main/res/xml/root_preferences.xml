<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">


    <PreferenceCategory app:title="Notification">

        <SwitchPreferenceCompat
            app:key="notify"
            app:title="Allow Location Notification"
            app:summaryOff="@string/notify_off"
            app:summaryOn="@string/notify_on"/>

        <SwitchPreferenceCompat
            app:dependency="notify"
            app:key="sound"
            app:summaryOff="@string/sound_off"
            app:summaryOn="@string/sound_on"
            app:title="@string/attachment_title" />

    </PreferenceCategory>

</PreferenceScreen>